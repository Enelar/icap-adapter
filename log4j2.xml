<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="warn" shutdownHook="enable">
  <Properties>
    <Property name="filename">logs/icap.log</Property>
  </Properties>
  <Appenders>
    <Console name="Console" target="SYSTEM_OUT">
      <PatternLayout pattern="%d %-5p [%t] %C{2} (%F:%L) - %m%n"/>
    </Console>
    <RollingRandomAccessFile name="File" fileName="${filename}"
    	filePattern="logs/$${date:yyyy-MM}/icap-%d{yyyy-MM-dd-HH}-%i.log">
      <PatternLayout pattern="%m%n"/>
      <Policies>
        <OnStartupTriggeringPolicy />
        <TimeBasedTriggeringPolicy interval="6" modulate="true"/>
        <SizeBasedTriggeringPolicy size="250 MB"/>
      </Policies>
    </RollingRandomAccessFile>
  </Appenders>
  <Loggers>
    <Logger name="com.reuters.rfa" level="warn"/>
    <Logger name="com.uptyc.IcapAdapter.Consumer" level="info" additivity="false">
      <AppenderRef ref="File"/>
    </Logger>
    <Root level="error">
      <AppenderRef ref="Console"/>
    </Root>
  </Loggers>
</Configuration>
